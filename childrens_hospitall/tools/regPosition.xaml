<Page x:Class="childrens_hospitall.tools.regPosition"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:childrens_hospitall.tools"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="regPosition">

    <Grid Background="Azure">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="373*"/>
        </Grid.RowDefinitions>
        <StackPanel  Grid.Column="1" Grid.Row="1">
            <TextBlock Text="Наименование должности:"  />
            <TextBox x:Name="txt_name" Height="20" Width="200" HorizontalAlignment="Left" />
            <TextBlock Text="Зарплата:"/>
            <TextBox x:Name="txt_salary" Height="20" Width="200" HorizontalAlignment="Left" />
            <Button x:Name="add" Content="Добавить" Click="add_Click"  ></Button>
        </StackPanel>
        
    </Grid>
</Page>
