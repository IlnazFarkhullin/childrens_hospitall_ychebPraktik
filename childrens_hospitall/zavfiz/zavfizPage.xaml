<Page x:Class="childrens_hospitall.zavfiz.zavfizPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:childrens_hospitall.zavfiz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="zavfizPage">

    <Grid Background="Azure">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Margin="5">
            <Label Content="Султанова Камиля Накиповна"  FontSize="17"></Label>
            <Label Content="Заведущая отделением физиотерапии "></Label>
            <Button x:Name="patient_btn"  HorizontalAlignment="Left" MinWidth="100" Content="Пациенты" Click="patient_btn_Click"/>
            
            <Button x:Name="back" HorizontalAlignment="Left" MinWidth="100" Content="Выход" Click="back_Click" ></Button>

        </StackPanel>



    </Grid>
</Page>
